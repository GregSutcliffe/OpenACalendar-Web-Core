<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "bootstrap.php" >

	<logging>
		<log type="coverage-html" target="../../testreports/coverage/" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70"/>
	</logging>

	<filter>
		<blacklist>
			<directory suffix=".php">../../vendor</directory>
			<directory suffix=".php">../../core/cli</directory>
			<directory suffix=".php">../../core/tests</directory>
			<directory suffix=".php">../../core/php/autoload.php</directory>
			<directory suffix=".php">../../core/php/autoloadCLI.php</directory>
			<directory suffix=".php">../../core/php/autoloadWebApp.php</directory>
		</blacklist>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">../core/php/indexapi2/controllers</directory>
			<directory suffix=".php">../core/php/indexapi2/forms</directory>
			<directory suffix=".php">../core/php/index/controllers</directory>
			<directory suffix=".php">../core/php/index/forms</directory>
			<directory suffix=".php">../core/php/site/controllers</directory>
			<directory suffix=".php">../core/php/site/forms</directory>
			<directory suffix=".php">../core/php/sysadmin/controllers</directory>
			<directory suffix=".php">../core/php/sysadmin/forms</directory>
			<directory suffix=".php">../core/php/api1exportbuilders</directory>
			<directory suffix=".php">../core/php/appconfiguration</directory>
			<directory suffix=".php">../core/php/cliapi1</directory>
			<directory suffix=".php">../core/php/icalparser</directory>
			<directory suffix=".php">../core/php/import</directory>
			<directory suffix=".php">../core/php/models</directory>
			<directory suffix=".php">../core/php/repositories</directory>
			<directory suffix=".php">../core/php/repositories/builders</directory>
			<directory suffix=".php">../core/php/repositories/builders/filterparams</directory>
			<directory suffix=".php">../core/php/siteapi1/controllers</directory>
			<directory suffix=".php">../core/php/siteapi2/controllers</directory>
			<directory suffix=".php">../core/php/tasks</directory>
			<directory suffix=".php">../core/php/twig/extensions</directory>
			<directory suffix=".php">../core/php/usernotifications/models</directory>
			<directory suffix=".php">../core/php/usernotifications/preferences</directory>
			<directory suffix=".php">../core/php/usernotifications/types</directory>
			<directory suffix=".php">../../extension/CuratedLists/php/models</directory>
			<directory suffix=".php">../../extension/CuratedLists/php/repositories</directory>
			<directory suffix=".php">../../extension/CuratedLists/php/repositories/builders</directory>
			<directory suffix=".php">../../extension/CuratedLists/php/org/openacalendar/curatedlists/</directory>
			<directory suffix=".php">../../extension/CuratedLists/php/org/openacalendar/curatedlists/site/controllers</directory>
			<directory suffix=".php">../../extension/CuratedLists/php/org/openacalendar/curatedlists/siteapi1/controllers</directory>
			<file>../core/php/BaseExtension.php</file>
			<file>../core/php/BaseUserNotificationModel.php</file>
			<file>../core/php/BaseUserNotificationPreference.php</file>
			<file>../core/php/BaseUserNotificationType.php</file>
			<file>../core/php/ConfigCheck.php</file>
			<file>../core/php/Config.php</file>
			<file>../core/php/ExtensionCore.php</file>
			<file>../core/php/ExtensionHookRunner.php</file>
			<file>../core/php/ExtensionManager.php</file>
			<file>../core/php/FlashMessages.php</file>
			<file>../core/php/IniConfigWithEnvironment.php</file>
			<file>../core/php/ParseDomain.php</file>
			<file>../core/php/ParseURL.php</file>
			<file>../core/php/RenderCalendar.php</file>
			<file>../core/php/Request.php</file>
			<file>../core/php/SearchForDuplicateEvents.php</file>
			<file>../core/php/SysAdminLink.php</file>
			<file>../core/php/TimeSource.php</file>
			<file>../core/php/UserAgent.php</file>
			<file>../core/php/WebSession.php</file>
		</whitelist>
	</filter>

    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>.</directory>
            <directory>../../extension/CuratedLists/tests/</directory>
        </testsuite>
    </testsuites>


</phpunit>
