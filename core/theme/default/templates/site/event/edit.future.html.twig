{% extends 'site/event/page.html.twig' %}


{% block pageTitle %}Edit {{ event.summaryDisplay }} - {% endblock %} 

{% block innerContent %}

	<form action="#" method="post" class="styled">
		<input type="hidden" name="CSFRToken" value="{{ getCSFRToken() }}">
		<input type="hidden" name="submitted" value="yes">
		
		<p>You changed:</p>

		<ul>
			{% if eventHistory.getAreaIdChanged or eventHistory.getVenueIdChanged%}
				<li>
					<input type="checkbox" name="fieldAreaVenue" value="1" checked="checked">
					Venue for event
				</li>
			{% endif %}
			{% if eventHistory.getDescriptionChanged %}
				<li>
					<input type="checkbox" name="fieldDescription" value="1" checked="checked">
					Description
				</li>
			{% endif %}
			{% if eventHistory.getUrlChanged %}
				<li>
					<input type="checkbox" name="fieldUrl" value="1" checked="checked">
					Url
				</li>
			{% endif %}
			{% if eventHistory.getCountryIdChanged %}
				<li>
					<input type="checkbox" name="fieldCountry" value="1" checked="checked">
					Country
				</li>
			{% endif %}
			{% if eventHistory.getTimezoneChanged %}
				<li>
					<input type="checkbox" name="fieldTimezone" value="1" checked="checked">
					Timezone
				</li>
			{% endif %}
			{% if eventHistory.getIsVirtualChanged %}
				<li>
					<input type="checkbox" name="fieldIsVirtual" value="1" checked="checked">
					Is Virtual
				</li>
			{% endif %}
			{% if eventHistory.getIsPhysicalChanged %}
				<li>
					<input type="checkbox" name="fieldIsPhysical" value="1" checked="checked">
					Is Physical
				</li>
			{% endif %}
		</ul>
		
		<p>Do you want to change these future events to?</p>
		
		<ul class="events">
			{% for event in futureEvents %}
				<li class="event">
					<div class="dateTimeIcon">
						<time datetime="{{ event.getStartAt|tolocaltimeformatted('c', currentTimeZone) }}">
							<div class="dateIcon">
								<span class="startDay">{{ event.getStartAt|tolocaltimeformatted('D', currentTimeZone) }}</span>
								<span class="startDate">{{ event.getStartAt|tolocaltimeformatted('jS', currentTimeZone) }}</span>
								<span class="startMonthYear">{{ event.getStartAt|tolocaltimeformatted('M \'y', currentTimeZone) }}</span>
							</div>
							<div class="timeIcon">
								<span class="startTime">{{ event.getStartAt|tolocaltimeformatted12or24hourclock('g:ia', 'H:i', currentUserClock12Hour, currentTimeZone) }}</span>
							</div>
						</time>				
					</div>
					<div class="title">
						<input type="checkbox" name="eventSlug{{ event.slug }}" value="1" checked="checked">
						{{ event.summaryDisplay}}
					</div>
					<div class="afterEventListing"></div>
				</li>
			{% endfor %}
		</ul>
		
		

	


		<input type="submit"  value="Save" />	
	</form>
{% endblock %}


{% block scripts %}
{% endblock %}

