{% extends 'site/page.html.twig' %}


{% block pageTitle %}Imports - {% endblock %} 

{% block htmlHeader %}
	<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
{% endblock %}

{% block breadcrumbs %}
	{% if not config.isSingleSiteMode %}<li><a href="/">{{ currentSite.title }}</a></li>{% endif %}
	<li class="current"><a href="/import">import from web</a></li>
{% endblock %}

{% block content %}

	{% if not currentSiteFeatures.has('org.openacalendar','Importer') %}
		<div class="flash-error">This feature has been disabled on this calendar. You can not make changes.</div>
	{% endif %}
		
	<h2>Import from web</h2>

	<div id="innerPageWrapper">
		<ul id="innerPageActions">
			<li class="tab currentTab">List</li>
		</ul>
		<div id="innerPage">

			<ul class="mainListImports">
				{% for import in imports %}
					<li class="import">
						<div class="title"><a href="/import/{{ import.slug }}">{{ import.title }}</a></div>
					</li>
				{% else %}
					<li class="nodata">
						There are no imports.
					</li>								
				{% endfor %}
			</ul>

			<div id="afterInnerPageContent"></div>
		</div>
	</div>



{% endblock %}

